{
    "name": "Opus MCP Go Development",
    "image": "debian:trixie-slim",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:latest": {
            "installZsh": true,
            "configureZshAsDefaultShell": false,
            "installOhMyZsh": true,
            "upgradePackages": true,
            "username": "vscode",
            "userUid": "automatic",
            "userGid": "automatic"
        },
        "ghcr.io/devcontainers/features/git:latest": {
            "version": "latest",
            "ppa": false
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "eamodio.gitlens"
            ],
            "settings": {
                "go.useLanguageServer": true,
                "go.toolsManagement.autoUpdate": true,
                "go.lintTool": "golangci-lint",
                "go.lintOnSave": "workspace",
                "go.formatTool": "gofumpt",
                "[go]": {
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit"
                    }
                },
                "gopls": {
                    "formatting.gofumpt": true
                }
            }
        }
    },
    "initializeCommand": "bash -c 'mkdir -p ${localWorkspaceFolder}/.devcontainer/.gitconfig-cache && [ -f ~/.gitconfig ] && cp ~/.gitconfig ${localWorkspaceFolder}/.devcontainer/.gitconfig-cache/gitconfig || true'",
    "postCreateCommand": "bash .devcontainer/setup.sh",
    "postStartCommand": "exit",
    "remoteUser": "vscode",
    "mounts": [
        "source=${localWorkspaceFolder}/.devcontainer/.gitconfig-cache,target=/tmp/.host-gitconfig-cache,type=bind,readonly,consistency=cached"
    ],
    "forwardPorts": [
        8000
    ],
    "portsAttributes": {
        "8000": {
            "label": "MCP HTTP Server",
            "onAutoForward": "notify"
        }
    }
}
